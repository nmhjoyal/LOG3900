<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Lobby">

    <Button
        android:id="@+id/test_online_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary_selector"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:text="@string/title_activity_free_draw_test"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/free_draw"
        app:layout_constraintEnd_toStartOf="@+id/chatrooms_container"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/free_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary_selector"
        android:padding="12dp"
        android:text="@string/title_activity_free_draw"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chatrooms_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/show_rooms_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/show_rooms"
        android:tooltipText="@string/show_rooms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chatrooms_container"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hide" />

    <androidx.cardview.widget.CardView
        android:id="@+id/chatrooms_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@+id/chat_guideline" >
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/chat_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <TextView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:text="PLAY"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/empty_textview"
        app:layout_constraintStart_toStartOf="@+id/empty_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/empty_textview"
        android:layout_width="224dp"
        android:layout_height="93dp"
        android:background="@drawable/layout_border"
        app:layout_constraintBottom_toTopOf="@+id/test_online_draw"
        app:layout_constraintEnd_toEndOf="@+id/show_rooms_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/empty_textview"
        app:layout_constraintEnd_toStartOf="@+id/chat_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_play_arrow_24px" />

    <Button
        android:id="@+id/create_a_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create match"
        app:layout_constraintBottom_toBottomOf="@+id/empty_textview"
        app:layout_constraintStart_toStartOf="@+id/empty_textview"
        app:layout_constraintTop_toTopOf="@+id/empty_textview"
        app:layout_constraintVertical_bias="0.489" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="join match"
        app:layout_constraintBottom_toBottomOf="@+id/empty_textview"
        app:layout_constraintEnd_toEndOf="@+id/empty_textview"
        app:layout_constraintStart_toEndOf="@+id/create_a_game_button"
        app:layout_constraintTop_toTopOf="@+id/empty_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>