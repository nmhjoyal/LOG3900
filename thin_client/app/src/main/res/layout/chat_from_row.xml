<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_username_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stat_placeholder"
            app:layout_constraintBottom_toTopOf="@id/image_from_message"
            app:layout_constraintStart_toStartOf="@+id/image_from_message" />
        <TextView
            android:id="@+id/timestamp_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_from_message"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/image_from_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle_primary_dark" />

        <TextView
            android:id="@+id/text_view_from_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="start"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/image_from_message"
            app:layout_constraintTop_toTopOf="@+id/image_from_message"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>