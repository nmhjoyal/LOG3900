<UserControl x:Class="WPFUI.Views.profileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800"
			 FontFamily="Microsoft JhengHei UI Light" Background="#FFF1F2F1" FontSize="16">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
           
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
		<StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock FontSize="40" Foreground="#00584C" Margin="0,0,10,0" >Update Profile</TextBlock>
			<Image Source="/Resources/logo.ico" Height="35"></Image>
		</StackPanel>
		<StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Center" Width="300">
			<TextBlock Text="New username:"/>
			<TextBox x:Name="userName" Width="200" Foreground="#FF66CC00" Margin="2,0,0,0"/>
		</StackPanel>

		<StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Center" Width="300">
			<TextBlock Text="New first name:"/>
			<TextBox  x:Name="firstName" Width="200" Foreground="#FF66CC00" Margin="2,0,0,0"/>
		</StackPanel>

		<StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Center" Width="300">
			<TextBlock Text="New last name:"/>
			<TextBox x:Name="lastName" Width="200" Foreground="#FF66CC00" Margin="2,0,0,0"/>
		</StackPanel>

		<StackPanel Grid.Column="0" Grid.Row="5" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Center" Width="300">
			<TextBlock Text="New password:"/>
			<TextBox x:Name="password" Width="200" Foreground="#FF66CC00" Margin="2,0,0,0"/>
		</StackPanel>

		<StackPanel Grid.Column="0" Grid.Row="6" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Center" Width="300">
			<TextBlock Text="Confirm new password:"/>
			<TextBox x:Name="confirmedPassword" Width="130" Foreground="#FF66CC00" Margin="2,0,0,0"/>
		</StackPanel>

		<StackPanel Grid.Column="0" Grid.Row="7" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Center" Width="300">
			<TextBlock Text="New avatar:"/>
		</StackPanel>

        <Button x:Name="saveProfileChanges" Content="Save Changes" Grid.Row="8" Grid.ColumnSpan="3" 
				MaxWidth="200" Click="saveProfileChanges_Click" Height="Auto" BorderBrush="#018677" Background="#018677" Foreground="White" Margin="0,10,0,0"/>

        <StackPanel Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="5" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,20,0,20">
            <TextBlock FontSize="40" Foreground="#00584C" Margin="0,0,10,0" >Profile Stats</TextBlock>

        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="10" Orientation="Horizontal" Grid.ColumnSpan="5" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Username:"/>
            <TextBlock Text="{Binding StatsClient.Username}" Foreground="#FF8AD63E" VerticalAlignment="Center" Margin="0,0,2,0" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="11" Orientation="Horizontal" Grid.ColumnSpan="5" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Match Count:"/>
            <TextBlock Text="{Binding StatsClient.MatchCount}" Foreground="#FF8AD63E" VerticalAlignment="Center" Margin="0,0,2,0" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="12" Orientation="Horizontal" Grid.ColumnSpan="5" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Victory Percentage:"/>
            <TextBlock Text="{Binding StatsClient.VictoryPerc}" Foreground="#FF8AD63E" VerticalAlignment="Center" Margin="0,0,2,0" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="13" Orientation="Horizontal" Grid.ColumnSpan="5" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Average Time:"/>
            <TextBlock Text="{Binding StatsClient.AverageTime}" Foreground="#FF8AD63E" VerticalAlignment="Center" Margin="0,0,2,0" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="14" Orientation="Horizontal" Grid.ColumnSpan="5" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Total Time:"/>
            <TextBlock Text="{Binding StatsClient.TotalTime}" Foreground="#FF8AD63E" VerticalAlignment="Center" Margin="0,0,2,0" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="15" Orientation="Horizontal" Grid.ColumnSpan="5" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Best solo sprint score:"/>
            <TextBlock Text="{Binding StatsClient.BestSSS}" Foreground="#FF8AD63E" VerticalAlignment="Center" Margin="0,0,2,0" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="16" Orientation="Horizontal" Grid.ColumnSpan="5" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Connections:"/>
            <ScrollViewer Margin="0,0,0,0.333" Width="200" MaxHeight="40">
                <ItemsControl ItemsSource="{Binding StatsClient.Connections}" Grid.Column="8" Grid.Row="8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="{Binding}" Foreground="#FF8AD63E" TextAlignment="Left"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="17" Orientation="Horizontal" Grid.ColumnSpan="5" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Disconnections:"/>
            <ScrollViewer Margin="0,0,0,0.333" Width="180" MaxHeight="40">
                <ItemsControl ItemsSource="{Binding StatsClient.Disconnections}" Grid.Column="8" Grid.Row="8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="{Binding}" Foreground="#FF8AD63E" TextAlignment="Left"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
           
            </ScrollViewer>
            
        </StackPanel>
       
        <StackPanel Grid.Column="0" Grid.Row="19" Orientation="Horizontal"  HorizontalAlignment="Center" Grid.ColumnSpan="3">
            <Button BorderBrush="{x:Null}" Background="#D6EFE9" FontSize="12" Foreground="#00584C" Content="See Matches History" Click="matchHistory"/>
        </StackPanel>

        <Border Width="620" Visibility="Hidden" HorizontalAlignment="Center" Name="border" Background="#00584C" Grid.Column="0" Grid.Row="2" CornerRadius="15" BorderBrush="Black" Opacity="0.9" Grid.ColumnSpan="3" Grid.RowSpan="19" Height="549" Margin="0,0.333,0,0" VerticalAlignment="Top" >
            <Grid Visibility="Hidden" Name="selectNextDrawingBox" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="1" Grid.ColumnSpan="7" Grid.Row="0" Text="Matches History" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22"
							   Name="roundFinishedMessage"  Foreground="White"/>

                <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="6" BorderThickness="2" BorderBrush="Black" Background="#D6EFE9"/>
                <Border Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="6" BorderThickness="2" BorderBrush="Black" Background="#D6EFE9"/>
                <Border Grid.Column="1" Grid.Row="2"  BorderThickness="1" BorderBrush="Black"/>
                <Border Grid.Column="2" Grid.Row="2" BorderThickness="1" BorderBrush="Black" />
                <Border Grid.Column="3" Grid.Row="2"  BorderThickness="1" BorderBrush="Black"/>
                <Border Grid.Column="4" Grid.Row="2" BorderThickness="1" BorderBrush="Black" />
                <Border Grid.Column="5" Grid.Row="2"  BorderThickness="1" BorderBrush="Black" />
                <Border Grid.Column="6" Grid.Row="2"   BorderThickness="1" BorderBrush="Black"/>

                <TextBlock Text="Start Time" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="End Time" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="Mode" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="Players" Grid.Column="4" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="Winner" Grid.Column="5" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="Score" Grid.Column="6" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical"  >
                    <ScrollViewer Grid.Column="1" Grid.Row="1" MinHeight="415">
                        <ItemsControl  ItemsSource="{Binding StatsClient.MatchesHistory}"  Grid.Column="8" Grid.Row="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding StartTime}" Foreground="#FF8AD63E" TextAlignment="Left"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Vertical"  >
                    <ScrollViewer Grid.Column="2" Grid.Row="1" MinHeight="415">
                        <ItemsControl  ItemsSource="{Binding accesseur}" Grid.Column="8" Grid.Row="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding EndTime}" Foreground="#FF8AD63E" TextAlignment="Left"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Grid.Column="3" Grid.Row="2" Orientation="Vertical"  >
                    <ScrollViewer Grid.Column="3" Grid.Row="1" MinHeight="415">
                        <ItemsControl ItemsSource="{Binding StatsClient.MatchesHistory}"  Grid.Column="8" Grid.Row="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding MatchMode}" Foreground="#FF8AD63E" TextAlignment="Left"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Grid.Column="4" Grid.Row="2" Orientation="Vertical"  >
                    <ScrollViewer Grid.Column="4" Grid.Row="1" MinHeight="415">
                        <ItemsControl ItemsSource="{Binding StatsClient.MatchesHistory}" Grid.Column="8" Grid.Row="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding PlayerNames}" Foreground="#FF8AD63E" TextAlignment="Left"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Grid.Column="5" Grid.Row="2" Orientation="Vertical"  >
                    <ScrollViewer Grid.Column="5" Grid.Row="1" MinHeight="415">
                        <ItemsControl ItemsSource="{Binding StatsClient.MatchesHistory}" Grid.Column="8" Grid.Row="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Winner}" Foreground="#FF8AD63E" TextAlignment="Left"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
                <StackPanel Grid.Column="6" Grid.Row="2" Orientation="Vertical"  >
                    <ScrollViewer Grid.Column="6" Grid.Row="1" MinHeight="415">
                    <ItemsControl ItemsSource="{Binding StatsClient.MatchesHistory}" Grid.Column="8" Grid.Row="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding MyScore}" Foreground="#FF8AD63E" TextAlignment="Left"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
                <Button Grid.Column="6" Grid.Row="0" FontSize="12" Foreground="White" Background="#D81A60" BorderBrush="#D81A60" Click="close" Content="Close" MaxWidth="70"/>

            </Grid>
        </Border>
        
        

    </Grid>
    
</UserControl>