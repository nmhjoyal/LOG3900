<UserControl x:Class="WPFUI.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Image Source="MainMenu.PNG" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="5" HorizontalAlignment="Center" MaxHeight="100" Margin="198,0,178,0"/>
        <Button x:Name="viewProfile" Content="Profile" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" MaxWidth="200"/>
        <Button x:Name="joinChatroom" Content="Join A ChatRoom" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="5" MaxWidth="200"/>
        <Button x:Name="createChat" Content="Create A ChatRoom" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="5" MaxWidth="200"/>
        <Button x:Name="viewLeaderboard" Content="Leaderboard" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="5" MaxWidth="200"/>
        <Button x:Name="logOut" Content="Log Out" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="5" MaxWidth="200" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>
