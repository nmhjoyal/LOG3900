<UserControl x:Class="WPFUI.Views.partieJeuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:WPFUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             FontFamily="Microsoft JhengHei UI Light">
    <Grid Background="#FFF5F5F6" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="50" />


        </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="20"/>
               
            </Grid.RowDefinitions>
        <TextBlock  FontSize="40"  Foreground="#FF66CC00" Text="Partie de jeu" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="14" TextAlignment="Center"/>
        <Border  Background="#FF00CCCC" Grid.Column="1" Grid.Row="2" Grid.RowSpan="5" Grid.ColumnSpan="12"/>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" Grid.RowSpan="5"/>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="6" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="5"/>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="9" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="5"/>
        <Image Source="/Resources/alarmclock.png" Grid.Column="2" Grid.Row="3" Grid.RowSpan="3"/>
        <TextBlock FontSize="14" Grid.Row="3" TextAlignment="Center" Grid.Column="4" Text="Temps Restant"/>
        <TextBlock FontSize="14" Grid.Row="5" TextAlignment="Center" Grid.Column="4" Name="tempsRestant"/>
        <TextBlock FontSize="14" Grid.Row="3" TextAlignment="Center" Grid.Column="7" Text="Round"/>
        <TextBlock FontSize="14" Grid.Row="5" TextAlignment="Center" Grid.Column="7" Name="nbRound"/>
        <TextBlock FontSize="14" Grid.ColumnSpan="3" Grid.Row="3" TextAlignment="Center" Grid.Column="9" Text="Mot à deviner"/>
        <TextBlock FontSize="14" Grid.Row="5" TextAlignment="Center" Grid.Column="9" Name="word"/>
        <InkCanvas Grid.Column="9" Grid.Row="8" Grid.RowSpan="4"/>
        <Border  BorderBrush="Black" Grid.ColumnSpan="2" BorderThickness="2" Grid.Column="11" Grid.Row="8"/>
        <Border  BorderBrush="Black" Grid.ColumnSpan="2" BorderThickness="2" Grid.Column="11" Grid.Row="9"/>
        <Border  BorderBrush="Black" Grid.ColumnSpan="2" BorderThickness="2" Grid.Column="11" Grid.Row="11"/>
        <Border  BorderBrush="Black" BorderThickness="2" Grid.Column="9" Grid.Row="8" Grid.RowSpan="4"/>
        <Border  BorderBrush="Black" BorderThickness="2" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="7" Grid.RowSpan="4"/>
        <ScrollViewer Grid.Column="1" Grid.Row="8" Grid.RowSpan="4" Grid.ColumnSpan="7" VerticalScrollBarVisibility="Visible">
            <ItemsControl x:Name="joueurs">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding position}" Foreground="DarkSlateGray"/>
                                <TextBlock Text="{Binding senderName}" Foreground="DarkSlateGray"/>
                                <Image Source="{Binding avatarSource}" Height="30" VerticalAlignment="Center"></Image>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Button  x:Name="goBack"  Grid.Column="12" Grid.Row="1" MaxWidth="100" HorizontalAlignment="Right"  Background="#FFBF0B0B" BorderBrush="#FFBF0B0B">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White">Retour</TextBlock>
                <Image Source="/Resources/logout.png" Height="22" Margin="5,0,0,0"></Image>
            </StackPanel>
        </Button>

        <ScrollViewer Grid.Column="11" Grid.Row="8" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Hidden" Name="messagesUI">
            <ItemsControl x:Name="messages">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="account_circle_grey_72x72.png" MaxHeight="25" VerticalAlignment="Center"></Image>
                                <TextBlock Text="{Binding senderName}" Foreground="DarkSlateGray"/>
                            </StackPanel>
                            <TextBlock Text="{Binding content}" Foreground="Black" TextWrapping="Wrap" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding formattedTimeStamp}" Foreground="DarkSlateGray" HorizontalAlignment="Left" FontSize="12" Margin="10,0,0,10"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <TextBox x:Name ="currentMessage" Grid.Column="11" Grid.Row="9" Foreground="DarkSlateGray" BorderBrush="Black" BorderThickness="3" Background="White" KeyDown="currentMessage_KeyDown"/>
        <Button x:Name ="sendMessage" BorderBrush="#FCBA03" Grid.Column="12" Grid.Row="9" Background="#FCBA03" Foreground="White" Click="refocus">
            Envoyer
        </Button>
        <TextBox x:Name ="guess" Grid.Column="11" Grid.Row="11" Foreground="DarkSlateGray" BorderBrush="Black" BorderThickness="3" Background="White" KeyDown="currentMessage_KeyDown"/>
        <Button x:Name ="sendGuess"  Grid.Column="12" Grid.Row="11" BorderBrush="#FC038C" Background="#FC038C" Foreground="White" Click="refocus">
            Deviner
        </Button>
        <Border BorderBrush="Black" BorderThickness="3" Grid.ColumnSpan="2" Grid.Row="13" Grid.Column="11"/>
        <Button Grid.Column="12" Grid.Row="13" Content="Indice" Foreground="White"/>
        <StackPanel Grid.Row="13" Grid.Column="11" Orientation="Horizontal">
            <Image Width="40" gif:ImageBehavior.AnimatedSource="/Resources/questions.gif" Margin="3,3,3,3"/>
            <TextBlock  VerticalAlignment="Center" TextAlignment="Center" Text="En manque d'inspiration?"/>
        </StackPanel>
    </Grid>
</UserControl>
